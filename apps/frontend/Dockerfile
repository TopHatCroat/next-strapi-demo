FROM node:18

ARG NODE_ENV=development
ENV NODE_ENV=${NODE_ENV}

ARG DOMAIN=localhost
ENV DOMAIN=${DOMAIN}

ARG NEXT_PUBLIC_BACKEND_URL=http://localhost:1337
ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}

WORKDIR /opt/
COPY ./ .
RUN yarn install
RUN yarn build
EXPOSE 3000

CMD ["yarn", "start"]
